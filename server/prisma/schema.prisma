generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CreatePost {
  id         Int        @id @default(autoincrement())
  data_ora   DateTime
  typeOfPost String
  appType    String
  idImage    Int?
  idAccount  Int?
  Account    Account?   @relation(fields: [idAccount], references: [id])
  ImageStorage ImageStorage? @relation(fields: [idImage], references: [id])
}

model Account {
  id     Int    @id @default(autoincrement())
  userId String @unique
  CreatePosts CreatePost[]
}

model ImageStorage {
  id  Int    @id @default(autoincrement())
  url String
  CreatePosts CreatePost[]
}

model Posts {
  id         Int      @id @default(autoincrement())
  data_ora   DateTime
  typeOfPost String
  addType    String
}
